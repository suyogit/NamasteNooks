<% layout('layouts/boilerplate') %>

<div class="row mt-3">
    <div class="col-8 offset-3">
    <h3>
        Listing Details
    </h3>
    </div>

    <div class="card col-8 offset-3 show-card">
        <img src="<%= listing.image %>" class="card-img-top show-img" alt="Hotel_image">
        <div class="card-body">
            <p class="card-text">
                <strong>Hotel Name:</strong>
                <%= listing.title %> <br><br>
                <strong>Description:</strong>
                <%= listing.description %> <br><br>
                <strong>Price:</strong>
                रु  <%= listing.price.toLocaleString("en-IN") %> <br><br>
                <strong>Location:</strong>
                <%= listing.location %> <br><br>
                <strong>Country:</strong>
                <%= listing.country %> <br><br>

            </p>
        </div>
    </div>
    <br>
    <div class="btns">

        <a href="/listings/<%= listing._id %>/edit" class="btn btn-dark edit-btn col-1 offset-3">Edit</a>
        <form method="POST" action="/listings/<%= listing._id%>?_method=DELETE">
            <button class="btn btn-dark offset-5">
                Delete
            </button>
            
        </form>
        
    </div>
    
</div>
